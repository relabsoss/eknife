%% -*- erlang -*-
{erl_opts, [debug_info]}.
{xref_checks, [undefined_function_calls]}.
{plugins, [rebar3_format]}.

{deps, [
  {gproc,   {git, "https://github.com/uwiger/gproc.git", {tag, "0.9.0"}}},
  {iso8601, {git, "https://github.com/erlsci/iso8601.git", {tag, "1.3.3"}}},
  {gun,     {git, "https://github.com/ninenines/gun.git", {tag, "2.0.0-rc.2"}}},
  {jiffy,   {git, "https://github.com/davisp/jiffy.git", {tag, "1.1.1"}}},
  {io_libc, {git, "https://github.com/relabsoss/io_libc.git", {branch, "master"}}}
]}.

{format, [
  {files, ["include/*.hrl", "src/*.erl", "test/*.erl"]},
  {formatter, otp_formatter},
  {options, #{ paper => 100 }}
]}.
